	text-align: center;
	margin-top: 60px;
	margin-bottom: 30px;
}

.section-title h2 {
	color: $chillgray;
}

.section-title h4 {
	color: $chillergray;
}

.heroimg img, .clientlogo img {
	max-width: 100%;
