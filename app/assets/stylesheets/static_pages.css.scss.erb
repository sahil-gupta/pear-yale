/*========== 4. FEATURES ==============*/

.features {
	margin: 25px 0;
}

.aligncentercomfortable {
	text-align: center;
	& h3 {
		line-height: 160%;
	}
}

/*========== 5. snarkquotes ==============*/

.testblock {
	width: 100%;
	height: auto;
	padding: 20px;
	background: $offwhite;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	font-family: Georgia, Times, "Times New Roman", serif;
	font-style: italic;
	position: relative;
	line-height: 28px;
	font-size: 16px;
}

.testblock:after {
	top: 100%;
	left: 20%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
	border-color: rgba(255, 255, 255, 0);
	border-top-color: $offwhite;
	border-width: 15px;
	margin-left: -15px;
}

.clientblock {
	margin-top: 40px;
	margin-left: 10px;
}

.clientblock img {
	float: left;
	-webkit-border-radius: 100%;
	-moz-border-radius: 100%;
	border-radius: 100%;
}

.clientblock p {
	padding-left: 80px;
	padding-top: 13px;
}

.clientblock p strong {
	color: $densegray;
	font-size: 16px;
}

/* Animation */

.testblock {
	-moz-transition: all 0.6s ease;
	-webkit-transition: all 0.6s ease;
	-ms-transition: all 0.6s ease;
	-o-transition: all 0.6s ease;
	transition: all 0.6s ease;
}

.testblock:hover {
	-moz-transform: scale(1.05);
	-webkit-transform: scale(1.05);
	-o-transform: scale(1.05);
	-ms-transform: scale(1.05);
	transform: scale(1.05);
	z-index: 2;
}

/*========== 6. icons AND bubble ==============*/

.bubble {
	padding: 20px;
	color: #fff;
	text-align: center;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}

.bubble .icontitle {
	font-size: 36px;
	font-weight: 300;
	margin: 10px 0;
}

a.iconleft i {
	margin-right: 10px;
}

a.iconright i, button.iconright i {
	margin-left: 10px;
}

.bubble .iconblurb {
	font-size: 16px;
	font-weight: 200;
	color: #fff;
	opacity: 0.7;
}

