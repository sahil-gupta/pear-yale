/*==========9. CUSTOM MEDIA QUERIES==============*/

/*MEDIA QUERIES*/

@media (max-width: 991px) {
	.logo {
		width: 350px;
	}
	h1 {
		font-size: 35px;
		line-height: 50px;
		margin: 15px 0;
	}
	h2 {
		font-size: 35px;
	}
	.features [class*="col-"]:not(:first-child) {
		margin-top: 30px;
	}
	.snarkquotes [class*="col-"]:not(:first-child) {
		margin-top: 40px;
	}
	.breath {
		margin: 30px auto;
	}
}

@media (max-width: 767px) {
	.logo {
		width: 300px;
	}
	h1 {
		font-size: 30px;
		line-height: 40px;
	}
	h2 {
		font-size: 30px;
		line-height: 40px;
	}
	.masthead {
		padding: 40px 15px;
	}
}

@media (max-width: 480px) {
	/*Media Queries for smaller devices*/
	.logo {
		width: 250px;
	}
	.masthead {
		background-attachment: scroll;
	}
}
